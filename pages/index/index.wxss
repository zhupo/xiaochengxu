/**index.wxss**/
.search-wrap {
  width: 100%;
  height: 64rpx;
  display: flex;
  background: #fff;
  border: 1px solid #DFDFDF;
  border-radius: 5px;
  overflow: hidden;
}

.search-wrap input {
  height: 100%;
  flex: 1;
  padding-left: 20rpx;
}

.search-wrap button {
  font-size: 28rpx;
  border-radius: 0;
  border-left: 1px solid #DFDFDF;
}
.search-wrap button::after {
  border: none;
}

.swiper-tab{
    width: 100%;
    border-bottom: 1px solid #ccc;
    text-align: center;
    margin-top: 40rpx;
    height: 76rpx;
    line-height: 60rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
    margin-bottom: -1px;
}
.active{
    color:#F65959;
    border-bottom: 1px solid #F65959;
}
swiper{
  width: 100%;
  text-align: center;
  min-height: 200px;
  height: 1000rpx;
}
swiper-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  overflow-y: auto;
  height: unset !important;
}
.code-item {
  width: 30%;
  margin-top: 40rpx;
  height: 260rpx;
  margin-right: 5%;
}
.code-item:nth-child(3n+3) {
  margin-right: 0;
}
.code-item image {
  width: 200rpx;
  height: 200rpx;
  background: red;
}
.personal-wrap image {
  background: greenyellow;
}
.gzh-wrap image {
  background: yellow;
}
.content-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #999;
}