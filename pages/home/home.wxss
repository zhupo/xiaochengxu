/**index.wxss**/
.userinfo {
  width: 100%;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.list-content {
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.list-item {
  width: 100%;
  background: #fff;
  padding: 0 20rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  color: #666;
  box-sizing: border-box;
}
.margin-bot {
  margin-bottom: 20rpx;
  border-bottom: 0;
}
.list-item:last-child {
  border-bottom: 0;
}