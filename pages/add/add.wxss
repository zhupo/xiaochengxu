/* pages/add/add.wxss */
.add-code {
  width: 400rpx;
  height: 400rpx;
  border: 2px solid #efefef;
  border-radius: 5px;
  font-size: 160rpx;
  line-height: 400rpx;
  text-align: center;
  color: #999;
}
.add-sign {
  width: 100%;
  margin-top: 20rpx;
}
.add-label {
  color: #999;
}
.add-operation {
  display: flex;
  width: 100%;
  height: 32px;
  margin: 20rpx 0;
  border-radius: 5rpx;
  overflow: hidden;
  border: 1px solid #efefef;
}
.add-operation input {
  flex: 1;
  background: #fff;
  height: 100%;
  padding-left: 20rpx;
}
.add-operation button {
  border-left: 1px solid #efefef;
}
.add-operation button::after {
  border: none;
}
.submit {
  margin-top: 100rpx;
  width: 100%;
}